{
  "name": "server",
  "private": "true",
  "version": "1.0.0",
  "description": "BlockParty backend server",
  "main": "index.js",
  "scripts": {
    "build": "next build",
    "start": "node index.js",
    "serve": "http-server .",
    "deploy:dev": "yarn now -f --local-config deploy/now.dev.json --public",
    "deploy:prod": "yarn now -f --local-config deploy/now.production.json --public",
    "deploy": "/bin/sh -c 'if [ \"$TRAVIS_BRANCH\" = \"master\" ]; then yarn deploy:prod; else yarn deploy:dev; fi'",
    "release:dev": "yarn deploy:dev && yarn now --local-config deploy/now.dev.json alias",
    "release:prod": "yarn deploy:prod && yarn now --local-config deploy/now.production.json alias",
    "release": "/bin/sh -c 'if [ \"$TRAVIS_BRANCH\" = \"master\" ]; then yarn release:prod; else yarn release:dev; fi'",
    "now": "now --team noblocknoparty --token $NOW_TOKEN"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/noblocknoparty/server.git"
  },
  "keywords": [
    "meth"
  ],
  "author": "Ramesh Nair <ram@hiddentao.com>",
  "license": "AGPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/noblocknoparty/server/issues"
  },
  "homepage": "https://github.com/noblocknoparty/server#readme",
  "dependencies": {
    "@google-cloud/firestore": "^0.16.1",
    "@koa/cors": "2",
    "cron": "^1.3.0",
    "koa": "^2.5.2",
    "koa-router": "^7.4.0",
    "next": "^6.1.1",
    "react": "^16.4.2",
    "react-dom": "^16.4.2"
  },
  "devDependencies": {
    "eslint": "^5.3.0",
    "eslint-config-airbnb-base": "^12.0.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-node": "^5.1.1",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-react": "^7.1.0",
    "eslint-plugin-standard": "^3.0.1",
    "http-server": "^0.11.1",
    "now": "^11.3.12"
  }
}
