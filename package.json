{
  "name": "server",
  "private": "true",
  "version": "1.0.0",
  "description": "BlockParty backend server",
  "main": "index.js",
  "scripts": {
    "build": "next build",
    "start": "node index.js",
    "serve": "http-server .",
    "setupdb": "yarn firebase deploy --token \"$FIREBASE_TOKEN\" --only \"firestore:indexes,firestore:rules\" --project",
    "deploy:ropsten": "yarn setupdb dev && yarn now -f --local-config .deploy/now.ropsten.json --public && yarn now --local-config .deploy/now.ropsten.json alias",
    "deploy:rinkeby": "yarn setupdb dev && yarn now -f --local-config .deploy/now.rinkeby.json --public && yarn now --local-config .deploy/now.rinkeby.json alias",
    "deploy:dev": "yarn deploy:ropsten && yarn deploy:rinkeby",
    "deploy:live": "yarn setupdb live && yarn now -f --local-config .deploy/now.live.json --public && yarn now --local-config .deploy/now.live.json alias",
    "deploy": "/bin/sh -c 'if [ \"$TRAVIS_BRANCH\" = \"master\" ]; then yarn deploy:live; else yarn deploy:dev; fi'",
    "release:ropsten": "yarn deploy:ropsten && yarn now rm kickback-api-ropsten --safe --yes",
    "release:rinkeby": "yarn deploy:rinkeby && yarn now rm kickback-api-rinkeby --safe --yes",
    "release:dev": "yarn release:ropsten && yarn release:rinkeby",
    "release:live": "yarn deploy:live && yarn now rm kickback-api-live --safe --yes",
    "release": "/bin/sh -c 'if [ \"$TRAVIS_BRANCH\" = \"master\" ]; then yarn release:live; else yarn release:dev; fi'",
    "now": "now --team noblocknoparty --token $NOW_TOKEN",
    "test": "jest --no-cache",
    "test:coverage": "yarn test --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/noblocknoparty/server.git"
  },
  "keywords": [
    "meth"
  ],
  "author": "Ramesh Nair <ram@hiddentao.com>",
  "license": "AGPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/noblocknoparty/server/issues"
  },
  "homepage": "https://github.com/noblocknoparty/server#readme",
  "dependencies": {
    "@koa/cors": "2",
    "@noblocknoparty/contracts": "^1.0.1",
    "apollo-server-koa": "^2.0.6",
    "bignumber.js": "^7.2.1",
    "bunyan": "^1.8.12",
    "cron": "^1.3.0",
    "delay": "^4.0.1",
    "envalid": "^4.1.4",
    "es6-promisify": "^6.0.0",
    "ethereum-event-logs": "^1.3.0",
    "eventemitter3": "^3.1.0",
    "firebase-admin": "^6.0.0",
    "get-stdin": "^6.0.0",
    "graphql": "^14.0.2",
    "koa": "^2.5.2",
    "koa-jwt": "^3.5.1",
    "koa-router": "^7.4.0",
    "lodash.get": "^4.4.2",
    "lodash.pick": "^4.4.0",
    "logdna-bunyan": "^1.0.1",
    "next": "^7.0.0",
    "p-queue": "^3.0.0",
    "randomstring": "^1.1.5",
    "react": "^16.4.2",
    "react-dom": "^16.4.2",
    "truffle-contract": "^4.0.0-beta.0",
    "uuid": "^3.3.2",
    "validator": "^10.7.1",
    "web3": "^1.0.0-beta.33",
    "web3-utils": "^1.0.0-beta.36",
    "yargs": "^12.0.2"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/*.test.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "coverageDirectory": "<rootDir>/test-coverage",
    "transform": {
      "^.+\\.js$": "<rootDir>/.jest/transform.js"
    },
    "setupTestFrameworkScriptFile": "<rootDir>/.jest/setupTestFrameworkScriptFile.js"
  },
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.6",
    "babel-jest": "^23.4.2",
    "babel-jest-assertions": "^0.1.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "coveralls": "^3.0.2",
    "eslint": "^5.3.0",
    "eslint-config-airbnb-base": "^12.0.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-node": "^5.1.1",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-react": "^7.1.0",
    "eslint-plugin-standard": "^3.0.1",
    "eth-hd-wallet": "^0.4.0",
    "firebase-tools": "^4.2.1",
    "ganache-core": "^2.2.1",
    "geth-private": "^3.0.0",
    "http-server": "^0.11.1",
    "jest": "^23.6.0",
    "now": "^11.4.6",
    "truffle": "^5.0.0-beta.0"
  }
}
