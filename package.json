{
  "name": "server",
  "private": "true",
  "version": "1.0.0",
  "description": "BlockParty backend server",
  "main": "index.js",
  "scripts": {
    "build": "next build",
    "start": "node index.js",
    "serve": "http-server .",
    "deploy:dev": "yarn now -f --local-config .deploy/now.dev.json --public",
    "deploy:prod": "yarn now -f --local-config .deploy/now.production.json --public",
    "deploy": "/bin/sh -c 'if [ \"$TRAVIS_BRANCH\" = \"master\" ]; then yarn deploy:prod; else yarn deploy:dev; fi'",
    "release:dev": "yarn deploy:dev && yarn now --local-config .deploy/now.dev.json alias",
    "release:prod": "yarn deploy:prod && yarn now --local-config .deploy/now.production.json alias",
    "release": "/bin/sh -c 'if [ \"$TRAVIS_BRANCH\" = \"master\" ]; then yarn release:prod; else yarn release:dev; fi'",
    "now": "now --team noblocknoparty --token $NOW_TOKEN",
    "test": "jest --no-cache",
    "test:coverage": "yarn test --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/noblocknoparty/server.git"
  },
  "keywords": [
    "meth"
  ],
  "author": "Ramesh Nair <ram@hiddentao.com>",
  "license": "AGPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/noblocknoparty/server/issues"
  },
  "homepage": "https://github.com/noblocknoparty/server#readme",
  "dependencies": {
    "@koa/cors": "2",
    "@noblocknoparty/contracts": "^0.11.6",
    "bignumber.js": "^7.2.1",
    "cron": "^1.3.0",
    "envalid": "^4.1.4",
    "es6-promisify": "^6.0.0",
    "eventemitter3": "^3.1.0",
    "firebase-admin": "^6.0.0",
    "koa": "^2.5.2",
    "koa-router": "^7.4.0",
    "logarama": "^3.2.0",
    "next": "^6.1.1",
    "react": "^16.4.2",
    "react-dom": "^16.4.2",
    "truffle-contract": "^4.0.0-beta.0",
    "web3": "^1.0.0-beta.33",
    "web3-utils": "^1.0.0-beta.36"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/*.test.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "coverageDirectory": "<rootDir>/test-coverage",
    "transform": {
      "^.+\\.js$": "<rootDir>/.jest/transform.js"
    },
    "setupTestFrameworkScriptFile": "<rootDir>/.jest/setupTestFrameworkScriptFile.js"
  },
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.6",
    "babel-jest": "^23.4.2",
    "babel-jest-assertions": "^0.1.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "coveralls": "^3.0.2",
    "eslint": "^5.3.0",
    "eslint-config-airbnb-base": "^12.0.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-node": "^5.1.1",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-react": "^7.1.0",
    "eslint-plugin-standard": "^3.0.1",
    "ganache-core": "^2.2.1",
    "http-server": "^0.11.1",
    "jest": "^23.5.0",
    "now": "^11.3.12",
    "truffle": "^5.0.0-beta.0"
  }
}
